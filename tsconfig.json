{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    // "module": "esnext", // needed to have dynamic imports
    // "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "actions": ["actions/*"],
      "components": ["components/*"],
      "models": ["models/*"],
      "reducers": ["reducers/*"],
      "services": ["services/*"],
    }
  }
}